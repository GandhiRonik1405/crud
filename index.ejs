<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div id="myAlert" class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <!-- <button class="btn-close" type="button" data-bs-dismiss="alert"></button> -->
                    <strong ><%= message.message %></strong>
                </div>
            
                <script>
                    // Close the alert after 4 seconds
                    setTimeout(function() {
                        var myAlert = document.getElementById('myAlert');
                        if (myAlert) {
                            var bsAlert = new bootstrap.Alert(myAlert);
                            bsAlert.close();
                        }
                    }, 4000);
                </script>
            <% } %>
            
            <div class="table-responsive">
                <% if (users!='') { %>
                    <table class="table tabel-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>Id</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr>
                                    <td><%= row.name %></td>
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail" alt="<%= row.name %> Image"/></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        
                    </table>
                <% } else {%>
                    <h1 class="text-center text-secondary mt-5">No User Found In Database!</h1>
                    <% } %>
                
            </div>

        </div>
    </div>

</div>

<%- include('./layout/footer') %>